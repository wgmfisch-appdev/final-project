<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All favorite compounds
    </h1>

    <a href="/favorite_compounds/new" class="btn btn-block btn-outline-secondary">
      Add a new favorite compound
    </a>
  </div>
</div>


<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Favorited by
        </th>

        <th>
          Compound
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @favorite_compounds.each do |favorite_compound| %>
      <tr>
        <td>
          <%= favorite_compound.id %>
        </td>

        <td>
          <%= favorite_compound.favorited_by %>
        </td>

        <td>
          <%= favorite_compound.compound_id %>
        </td>

        <td>
          <%= time_ago_in_words(favorite_compound.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(favorite_compound.updated_at) %> ago
        </td>

        <td>
          <a href="/favorite_compounds/<%= favorite_compound.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
