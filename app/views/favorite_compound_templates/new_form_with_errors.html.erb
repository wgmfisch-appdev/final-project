<!-- Validation failure messages -->
<% if @favorite_compound.present? %>
  <% if @favorite_compound.errors.any? %>
    <% @favorite_compound.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new favorite compound
</h1>


<hr>

<form action="/create_favorite_compound" method="post">

  <div class="form-group">
    <label for="favorited_by">
      Favorited by
    </label>

    <input type="text" id="favorited_by" name="favorited_by" class="form-control" value="<%= @favorite_compound.favorited_by %>">
  </div>

  <div class="form-group">
    <label for="compound_id">
      Compound
    </label>

    <input type="text" id="compound_id" name="compound_id" class="form-control" value="<%= @favorite_compound.compound_id %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create favorite compound
  </button>
</form>

<hr>

<a href="/favorite_compounds">
  Go back
</a>
