<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      Your patients
    </h1>

    <a href="/patients/new" class="btn btn-block btn-outline-secondary">
      Add a new patient
    </a>
  </div>
</div>


<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          Name
        </th>

        <th>
          Dob
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @patients.each do |patient| %>
        <% if patient.doctor.id == current_user.id %>
        <tr>
          <td>
            <%= patient.first_name %>
            <%= patient.last_name %>
          </td>
  
          <td>
            <%= patient.dob %>
          </td>
  
          <td>
            <%= time_ago_in_words(patient.created_at) %> ago
          </td>
          <td>
            <%= time_ago_in_words(patient.updated_at) %> ago
          </td>
  
          <td>
            <a href="/patients/<%= patient.id %>">
              Show details
            </a>
          </td>
        </tr>
        <% end %>
      <% end %>
    </table>
  </div>
</div>
