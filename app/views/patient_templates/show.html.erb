<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      <%= @patient.first_name %> <%= @patient.last_name %>'s details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/patients" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/patients/<%= @patient.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit patient
        </a>
      </div>

      <div class="col">
        <a href="/delete_patient/<%= @patient.id %>" class="btn btn-block btn-outline-secondary">
          Delete patient
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Date of Birth
      </dt>
      <dd>
        <%= @patient.dob %>
      </dd>

      <dt>
        Name
      </dt>
      <dd>
        <%= @patient.first_name %>
        <%= @patient.last_name %>
      </dd>

      <dt>
        Most Recent Compound
      </dt>
      <dd>
        <% if @patient.compounds.last.present? %>
          <a href="/compounds/<%=@patient.compounds.last.id %>">
            <%= @patient.first_name.titleize%>'s #<%= @patient.compounds.last.id %>
          </a>
        <% else %>
          <a href="/compounds/new">
            Make a First Compound
          </a>
        <% end %>
      </dd>

      <dt>
        Last Updated
      </dt>
      <dd>
        <%= time_ago_in_words(@patient.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

