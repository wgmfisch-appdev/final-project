<h1>
  Add a new concentration
</h1>


<hr>

<form action="/create_concentration" method="post">

  <div class="form-group">
    <label for="compound_id">
      Compound
    </label>

    <input type="text" id="compound_id" name="compound_id" class="form-control">
  </div>

  <div class="form-group">
    <label for="ingredient_concentration">
      Ingredient concentration
    </label>

    <input type="text" id="ingredient_concentration" name="ingredient_concentration" class="form-control">
  </div>

  <div class="form-group">
    <label for="ingredient_id">
      Ingredient
    </label>

    <input type="text" id="ingredient_id" name="ingredient_id" class="form-control">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create concentration
  </button>
</form>

<hr>

<a href="/concentrations">
  Go back
</a>
