<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      <%= @compound.patient.first_name.titleize %>'s #<%= @compound.id %>
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/compounds" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/compounds/<%= @compound.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit compound
        </a>
      </div>

      <div class="col">
        <a href="/delete_compound/<%= @compound.id %>" class="btn btn-block btn-outline-secondary">
          Delete compound
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Patient
      </dt>
      <dd>
        <%= @compound.patient.first_name.titleize %>
        <%= @compound.patient.last_name.titleize %>
      </dd>

      <dt>
        Ingredients
      </dt>
      <dd>
        <% @compound.ingredients.each do |ingredient| %>
          <div>
            <a href="/ingredients/<%= ingredient.id%>">
              <%= ingredient.name %>
            </a>
            <%= ingredient.concentration_for_compound(@compound).ingredient_concentration%>%
          </div>
        <% end %>
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@compound.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

