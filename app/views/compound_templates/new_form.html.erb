<h1>
  Add a new compound
</h1>


<hr>

<form action="/create_compound" method="post">

  <div class="form-group">
    <label for="patient_id">
      Patient
    </label>

    <%= select_tag("patient_id", options_from_collection_for_select(@patients.all, :id, :first_name), :class => "form-control") %>
    or <a href="/patients/new">Add a New Patient</a> first
  </div>
  
  <div class="form-group">
    <label for="ingredient_id">
      Ingredients
    </label>
    
    <form action="/new_form"  method="post">
      <%= select_tag("ingredient_id", options_from_collection_for_select(Ingredient.all, :id, :name), :class => "form-control") %>
      <a href="/ingredients/new">Add a New Ingredient</a> first
      And choose its concentration
      <input type="number" min="0" max="100" step="0.01" id="ingredient_concentration" name="ingredient_concentration" class="form-control" value="3">
      <button class="btn btn-block btn-outline-secondary">
        Add Ingredient to Compound
      </button>
    </form>
  </div>
  
  <button class="btn btn-block btn-outline-secondary">
    Create compound
  </button>
</form>

<hr>

<a href="/compounds">
  Go back
</a>
